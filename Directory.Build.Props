<Project>
  <PropertyGroup>
    <VersionPrefix>1.0.0</VersionPrefix>
    <VersionSuffix>-rc1</VersionSuffix>
    <Authors>KJBTech</Authors>
    <PackageProjectUrl>https://github.com/kjbtech/livestorm-dotnet</PackageProjectUrl>
    <RepositoryUrl>https://github.com/kjbtech/livestorm-dotnet</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>livestorm</PackageTags>
    <Copyright>Copyright © Livestorm $([System.DateTime]::UtcNow.Year)</Copyright>
    <PackageIcon>Logo.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <PropertyGroup>
    <AssemblyVersion>$(Version)</AssemblyVersion>
    <AssemblyFileVersion>$(Version)</AssemblyFileVersion>
    <AssemblyProduct>Livestorm API Helper Library.</AssemblyProduct>
    <AssemblyCompany>$(Authors)</AssemblyCompany>
    <AssemblyCopyright>Copyright © KJBTech $([System.DateTime]::UtcNow.Year)</AssemblyCopyright>
  </PropertyGroup>

  <PropertyGroup>
    <Deterministic>true</Deterministic>
    <GenerateAssemblyInfo>true</GenerateAssemblyInfo>
    <GenerateSerializationAssemblies>Off</GenerateSerializationAssemblies>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <UseVSHostingProcess>false</UseVSHostingProcess>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <ErrorReport>prompt</ErrorReport>
    <WarningLevel>4</WarningLevel>
    <LangVersion>latest</LangVersion>
    <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
    <GenerateBindingRedirectsOutputType>true</GenerateBindingRedirectsOutputType>
    <FileAlignment>512</FileAlignment>
  </PropertyGroup>
</Project>
